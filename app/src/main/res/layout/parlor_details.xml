<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ParlorListView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_bar"/>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/frameLayout"
            android:paddingTop="10dp">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                      android:name="com.google.android.gms.maps.MapFragment"
                      android:id="@+id/map"
                      android:layout_width="match_parent"
                      android:layout_height="127dp"
                      android:layout_gravity="center_horizontal|bottom"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:layout_gravity="left|center_vertical"
                android:weightSum="1"
                android:baselineAligned="false"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/parlor_address"
                        android:id="@+id/parlor_address_label"
                        android:textColor="#000000"
                        android:paddingBottom="20dp"/>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="192dp"
                        >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/parlor_opening_time_mo_label"
                                android:layout_column="0"
                                android:text="@string/monday"
                                android:layout_span="2"
                                android:textColor="#000000"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/thursday"
                                android:id="@+id/parlor_opening_time_tu_label"
                                android:layout_column="1"
                                android:textColor="#000000"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/wednesday"
                                android:id="@+id/parlor_opening_time_we_label"
                                android:layout_column="1"
                                android:textColor="#000000"/>

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/thursday"
                                android:id="@+id/parlor_opening_time_th_label"
                                android:layout_column="0"
                                android:layout_width="wrap_content"
                                android:layout_span="2"
                                android:textColor="#000000"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/friday"
                                android:id="@+id/parlor_opening_time_fr_label"
                                android:layout_column="1"
                                android:textColor="#000000"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/saturday"
                                android:id="@+id/parlor_opening_time_sa_label"
                                android:layout_column="1"
                                android:textColor="#000000"/>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textAppearance="?android:attr/textAppearanceMedium" android:text="@string/sunday"
                                android:id="@+id/parlor_opening_time_su_label"
                                android:layout_column="1"
                                android:textColor="#000000"/>
                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingLeft="50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_address"
                        android:paddingBottom="20dp"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_mo"
                        android:layout_gravity="left"
                        android:paddingTop="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_tu"
                        android:layout_gravity="left"
                        android:paddingTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_we"
                        android:layout_gravity="left"
                        android:paddingTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_th"
                        android:layout_gravity="left"
                        android:paddingTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_fr"
                        android:layout_gravity="left"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_sa"
                        android:layout_gravity="left"
                        android:paddingTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/placeholder"
                        android:id="@+id/parlor_opening_time_su"
                        android:layout_gravity="left"
                        android:paddingTop="5dp"/>

                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_gravity="center_horizontal|top">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:id="@+id/parlor_image"
                    android:layout_gravity="center_horizontal|top"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/parlor_image_descr"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/parlor_name"
                    android:id="@+id/parlor_name"
                    android:textStyle="bold|italic" android:autoText="false"
                    android:layout_gravity="center_horizontal|bottom"
                    />

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
